<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vue.Admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPaimentInterets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="paiementInterets"
                android:text="PAIMENT DES INTÉRÊTS" />

            <Button
                android:id="@+id/btnCompteCheques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="afficherListeCheque"
                android:text="COMPTE CHÈQUES" />

            <Button
                android:id="@+id/btnCompteEpargnes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="afficherListeEpargne"
                android:text="COMPTE ÉPARGNES" />

            <Button
                android:id="@+id/btnListeClients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="afficherListeClients"
                android:text="LISTE DES CLIENTS" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>